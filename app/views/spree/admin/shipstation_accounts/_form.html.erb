<div class="row justify-content-md-center">
  <div class="col col-lg-6 col-md-10">
    <%= form_with(model: [:admin, @shipstation_account], local: true) do |f| %>
      <div class="d-none alert alert-success" role="alert"></div>
      <div class="d-none alert alert-danger" role="alert"></div>
      <% if @shipstation_account.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@shipstation_account.errors.count, "error") %> prohibited this shipstation_account from being saved:</h2>
          <ul>
            <% @shipstation_account.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.label :username %>
        <%= f.text_field :username, class: "form-control", required: true %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.text_field :password, type: "password", class: "form-control", required: true, minlength: 6%>
      </div>

      <div class="form-group">
        <%= f.label :api_key %>
        <%= f.text_field :api_key, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :api_secret %>
        <%= f.text_field :api_secret, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :status %>
        <%= f.select :status, Spree::ShipstationAccount.statuses.keys, {}, { class: 'form-control' }%>
      </div>

      <div class="form-check">
        <%= f.check_box :orders_need_approval, class: "form-check-input" %>
        <%= f.label :orders_need_approval, class: "form-check-label" %>
      </div>


      <div class="form-group">
        <%= f.label :store_ids, 'Shipstation store Ids, if multiple, seperate by comma' %>
        <%= f.text_field :store_ids, class: "form-control" %>
      </div>

      <%= f.submit class: "btn btn-primary"%>
    <% end %>
  </div>
</div>
